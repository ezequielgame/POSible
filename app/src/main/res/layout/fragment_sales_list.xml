<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.owner.sales.views.SalesListFragment">

    <TextView
        android:id="@+id/tvNoSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay ventas del 0000-00-00 al 0000-00-00"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPickDateRange"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPickDateRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Periodo"
        app:icon="@drawable/ic_calendar"
        android:backgroundTint="@color/color_primary_light"
        app:iconGravity="end"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnPickDateRange">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/salesRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>